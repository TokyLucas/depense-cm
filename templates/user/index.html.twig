{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
        
        <div class="card">
            <div class="card-header row">
                <a href="/user/add" class="col-2 btn btn-primary mx-2">+ ajouter Utilisateurs</a>
            </div>
        </div>
        <!-- /.card -->

    </div>

    <div class="col-lg-12" id="pdf">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">
                <div class="">
                    <table class="table table-bordered table-sm">
                        <tr>
                            <th>Id</th>
                            <th>Identifiant</th>
                        </tr>
                        <tbody>
                            {% if personnels|length > 0 %}
                               {% for item in personnels %}
                                <tr>
                                    <td>
                                        <a href="personnel/{{item.getId()}}">{{item.getId()}}</a>
                                    </td>
                                    <td>
                                        <a href="personnel/{{item.getId()}}">
                                            {{item.getIdentifiant()}}
                                        </a>
                                    </td>
                                    <td>
                                        {% if item.getRoles()|length > 0 %}
                                            {% for role in item.getRoles() %}
                                                <span class="badge badge-danger">{{role.getDesignation()}}</span>
                                            {% endfor %}
                                        {% else %}
                                            <a href="user/addrole/{{item.getId()}}" class="btn btn-sm btn-primary">Ajouter role</a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}              
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-md-6 -->
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
{% endblock %}
