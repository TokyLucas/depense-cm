                    <h3>Dernier etat general par directions</h3>
                </h3>

            </div>
            <div class="card-body">
                <div class="">
                    <table class="table table-bordered">
                        <tr>
                            <th>Directions</th>
                        </tr>
                        <tbody>
                            <tr>
                                <td><a class="link" href="/salaire/direction/">Etat general</a></td>
                            </tr>
                            {% if directions|length > 0%}
                               {% for item in directions %}
                                <tr>
                                    <td><a class="link" href="/salaire/direction/?direction={{item.getId()}}">{{item.getDesignation()}}</a></td>
                                </tr>
                                {% endfor %}              
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
