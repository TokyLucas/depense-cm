{% extends 'base.html.twig' %}


{% block body %}
<div class="row">
    <div class="col-lg-12">
        
        <div class="card">
            <div class="card-header row">
                <form method="GET" action="/salaire/direction">
                    <div class="form-row">
                        <label class="col mx-2">Rechercher etat prec√©dent :</label>
                        <input id="month-selector" name="date" type="date" class="col mx-2 form-control">
                        <select name="direction" class="col mx-2 form-control">
                            <option value="-1">Tous</option>
                            {% if directions|length > 0%}
