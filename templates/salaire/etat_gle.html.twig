                                    <option value="{{item.getId()}}">{{item.getDesignation()}}</option>
                                {% endfor %}              
                            {% endif %}
                        </select>
                        <input id="month-selector" type="submit" class="col mx-2 form-control btn btn-primary" value="Rechercher">
                    </div>
                </form>
            </div>
        </div>

    </div>

    <div class="col-lg-12" id="pdf">
        <div class="card">
            <div class="card-header">
