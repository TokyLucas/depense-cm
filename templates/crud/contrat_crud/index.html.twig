{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
        
        <div class="card">
            <div class="card-header row">
                <a href="{{ path("app_contrat_add")}}" class="col-2 btn btn-primary mx-2">+ Ajouter un nouveau contrat</a>
            </div>
        </div>
        <!-- /.card -->

    </div>

    <div class="col-lg-12" id="pdf">
        <div class="card">
            <div class="card-header">
                <h1>Contrats Existant</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    {% if contrats|length > 0 %}
                        {% for item in contrats %}
                        <div class="col-md-3">
                            <div class="card col-md-12 px-0">
                                <div class="card-header bg-primary">
                                    <h6 class="card-title">{{item.getDesignation()}}</h6>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li>Dur√©e:  <span class="text-secondary">{{item.getDuree() | default("--")}} mois</li>
                                        <li>Charges Sociale:</li>
                                        {% for charges in item.getChargessociales() %}
                                            <li>{{charges.getDesignation() | default("--")}}</li>
                                            <li class="ml-3 text-secondary">Part Salariale: {{charges.getPartSalariale() | default("--")}}</li>
                                            <li class="ml-3 text-secondary">Part Patronale: {{charges.getPartPatronale() | default("--")}}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% endfor %}              
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-md-6 -->
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
{% endblock %}
