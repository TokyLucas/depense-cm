{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
        
        <div class="card">
            <div class="card-header row">
                <a href="{{ path("app_direction_add")}}" class="col-2 btn btn-primary mx-2">+ Ajouter une nouvelle direction</a>
            </div>
        </div>
        <!-- /.card -->

    </div>

    <div class="col-lg-12" id="pdf">
        <div class="card">
            <div class="card-header">
                <h1>Direction existant</h1>
            </div>
            <div class="card-body">
                <div class="">
                    <table class="table table-bordered table-sm">
                        <tr>
                            <th>Id</th>
                            <th>Identifiant</th>
                        </tr>
                        <tbody>
                            {% if directions|length > 0 %}
                               {% for item in directions %}
                                <tr>
                                    <td>
                                        {{item.getId()}}
                                    </td>
                                    <td>
                                        {{item.getDesignation()}}
                                    </td>
                                    <td>
                                        <a href="{{ path("app_direction_remove", { id: item.getId() } ) }}" onclick="alert('Etes-vous sÃ»r ?')">Supprimer</a>
                                    </td>
                                </tr>
                                {% endfor %}              
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-md-6 -->
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
{% endblock %}
