{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
        
        <div class="card">
            <div class="card-header row">
                <a href="/directions/add" class="col-2 btn btn-primary mx-2">+ Ajouter une nouvelle direction</a>
            </div>
        </div>
        <!-- /.card -->

    </div>

    <div class="col-lg-12" id="pdf">
        <div class="card">
            <div class="card-header">
                <h1>Ajouter un role</h1>
            </div>
            <div class="card-body">
                <div class="">
                    <h3>Utilisateur: {{selecteduser.getIdentifiant()}}</h3>
                    <form action="/user/addrole" method="POST">
                        <input name="user_id" value="{{id}}" hidden>
                        <select name="role_id" class="form-control my-2">
                            {% for item in roles %}
                                <option value="{{item.getId()}}">{{item.getDesignation()}}</option>
                            {% endfor %}
                        </select>
                        <input type="submit" class="btn btn-primary" value="Ajouter">
                    </form>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-md-6 -->
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
{% endblock %}
