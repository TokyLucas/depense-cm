                    <h4>n√©e le {{fiche.getDatedenaissance() | date("M, d Y")}}</h4>
                    <h4>{{fiche.getAge()}} ans</h4>
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th>CIN</th>
                                <td>{{fiche.getCIN()}}</td>
                            </tr>
                            <tr>
                                <th>Matricule</th>
                                <td>{{fiche.getMatricule()}}</td>
                            </tr>
                            <tr>
                                <th>Direction</th>
                                <td>{{fiche.getDirection()}}</td>
